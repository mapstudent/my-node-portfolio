<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Set character encoding and responsive layout -->
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  
  <!-- Page title -->
  <title>Register</title>
  
  <!-- Link to external CSS for styling the register/login form -->
  <link rel="stylesheet" href="style/register-login.css" />
</head>
<body>
  <!-- Registration form container -->
  <div class="form-container">
    <!-- Page header -->
    <h2>Register</h2>

    <!-- Temporary "Skip" link to jump directly to the to-do list page -->
    <h3><a href="todo.html">Skip</a></h3>

    <!-- Registration form -->
    <form id="registerForm">
      <!-- Input for first name -->
      <input type="text" id="firstName" placeholder="First Name" required />

      <!-- Input for last name -->
      <input type="text" id="lastName" placeholder="Last Name" required />

      <!-- Gender dropdown selection -->
      <select id="gender" required>
        <option value="">Select Gender</option>
        <option>Male</option>
        <option>Female</option>
        <option>Other</option>
      </select>

      <!-- Input for email -->
      <input type="email" id="registerEmail" placeholder="Email" required />

      <!-- Input for password -->
      <input type="password" id="registerPassword" placeholder="Password" required />

      <!-- Submit button -->
      <button type="submit">Register</button>

      <!-- Link to login page for existing users -->
      <p>Already have an account? <a href="login.html">Login</a></p>
    </form>
  </div>

  <!-- External JavaScript file to handle registration logic -->
  <script src="script/auth-register-login.js"></script>
</body>
</html>
